<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/dialog_shape"
    tools:ignore="RtlSymmetry">

    <ImageButton
        android:id="@+id/red"
        style="@style/color_button"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/red1" />

    <View
        android:id="@+id/red_taken"
        style="@style/color_button_taken"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/blue"
        style="@style/color_button"
        android:contentDescription="@string/blue"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/blue1" />

    <View
        android:id="@+id/blue_taken"
        style="@style/color_button_taken"
        app:layout_constraintStart_toEndOf="@+id/red_taken"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/yellow"
        style="@style/color_button"
        android:contentDescription="@string/purple"
        app:layout_constraintStart_toEndOf="@+id/blue"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/yellow1" />

    <View
        android:id="@+id/yellow_taken"
        style="@style/color_button_taken"
        app:layout_constraintStart_toEndOf="@+id/blue_taken"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/green"
        style="@style/color_button"
        android:contentDescription="@string/green_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red"
        android:background="@color/green1" />

    <View
        android:id="@+id/green_taken"
        style="@style/color_button_taken"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_taken" />

    <ImageButton
        android:id="@+id/pink"
        style="@style/color_button"
        android:contentDescription="@string/green_4"
        app:layout_constraintStart_toEndOf="@+id/green"
        app:layout_constraintTop_toBottomOf="@+id/blue"
        android:background="@color/pink1" />

    <View
        android:id="@+id/pink_taken"
        style="@style/color_button_taken"
        app:layout_constraintStart_toEndOf="@+id/green_taken"
        app:layout_constraintTop_toBottomOf="@+id/blue_taken" />

    <ImageButton
        android:id="@+id/purple"
        style="@style/color_button"
        android:contentDescription="@string/green_5"
        app:layout_constraintStart_toEndOf="@+id/pink"
        app:layout_constraintTop_toBottomOf="@+id/yellow"
        android:background="@color/purple1" />

    <View
        android:id="@+id/purple_taken"
        style="@style/color_button_taken"
        app:layout_constraintStart_toEndOf="@+id/pink_taken"
        app:layout_constraintTop_toBottomOf="@+id/yellow_taken" />
</androidx.constraintlayout.widget.ConstraintLayout>