<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="color_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="srcCompat">@drawable/color_button</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style  name="color_button_taken">
        <item name="android:background">@drawable/color_button_taken</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="pause_menu_button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="circle_large">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="srcCompat">@drawable/black_circle</item>
    </style>

    <style name="circle_medium">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="srcCompat">@drawable/black_circle</item>
    </style>

    <style name="circle_small">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="srcCompat">@drawable/black_circle</item>
    </style>

    <style name="connect_horizontal_large">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:clickable">true</item>
        <item name="srcCompat">@drawable/connector_horizontal</item>
    </style>

    <style name="connect_vertical_large">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:clickable">true</item>
        <item name="srcCompat">@drawable/connector_vertical</item>
    </style>

    <style name="connect_horizontal_medium">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:clickable">true</item>
        <item name="srcCompat">@drawable/connector_horizontal</item>
    </style>

    <style name="connect_vertical_medium">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:clickable">true</item>
        <item name="srcCompat">@drawable/connector_vertical</item>
    </style>

    <style name="connect_horizontal_small">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">95dp</item>
        <item name="android:clickable">true</item>
        <item name="srcCompat">@drawable/connector_horizontal</item>
    </style>

    <style name="connect_vertical_small">
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:clickable">true</item>
        <item name="srcCompat">@drawable/connector_vertical</item>
    </style>

    <style name="square_large">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="srcCompat">@drawable/square</item>
    </style>

    <style name="square_medium">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="srcCompat">@drawable/square</item>
    </style>

    <style name="square_small">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="srcCompat">@drawable/square</item>
    </style>

</resources>